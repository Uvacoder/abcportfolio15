    <script>
        document.getElementById('year').innerHTML = new Date().getFullYear()
        const {timeZone, locale} = Intl
            .DateTimeFormat()
            .resolvedOptions()
        fetch('/api/pageview', {
            method: 'POST',
            body: JSON.stringify({timeZone, locale}),
            headers: {
                'Content-Type': 'application/json'
            }
        })
    </script>
