<article class="py-8">
  <div class="text-sm text-grey-darker dark:text-grey-dark leading-normal mb-2">{{ item.date | formatDate }}</div>
  <a
    class="inline-block text-2xl font-semibold text-black dark:text-white leading-tight hover:underline mb-4"
    href="{{ item.url }}">
    {{ item.data.title | formatTitle }}
  </a>
  <p class="text-black dark:text-white mb-6 leading-loose text-base lg:text-lg">
    {{ item.data.excerpt }}
  </p>
  <a
    class="inline-block text-base text-blue dark:text-blue-light no-underline uppercase tracking-wide"
    href="{{ item.url }}">
    Read more â†’
  </a>
</article>
