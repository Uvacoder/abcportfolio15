{
  "env": {
    "JWT_SECRET": "@analytics-api-jwt-secret"
  },
  "builds": [
    { "src": "www/package.json", "use": "@now/static-build" },
    { "src": "api/**/*.js", "use": "@now/node" }
  ],
  "routes": [
    { "src": "/api/pageview", "dest": "/api/trackPageview.js", "methods": ["POST"] },
    { "src": "/wp-login.php", "dest": "/www/wp-admin" },
    { "src": "^/assets/(.*).js", "headers": { "cache-control": "max-age=31536000,immutable" }, "dest": "/www/assets/$1.js" },
    { "src": "^/assets/(.*).css", "headers": { "cache-control": "max-age=31536000,immutable" }, "dest": "/www/assets/$1.css" },
    { "src": "/(.*)", "headers": { "cache-control": "max-age=0,must-revalidate" }, "dest": "/www/$1" }
  ]
}
